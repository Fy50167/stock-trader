<div class = 'stocks-list'>
   <div class="container stock" style="background-color: #FFD580; color: black;"> 
        <div class="row">
            <div class="col-3 text-uppercase mobile">
                <p>Company</p>
            </div>

            <div class="col-3 text-uppercase mobile">
                <p>Symbol</p>
            </div>

            <div class="col text-uppercase mobile">
                <p>Price</p>
            </div>
            <div></div>
        </div>
    </div>
    {{#each stocks as |stock|}}
        <div class = "container stock">
            <div class="row">
                <div class="col mobile">
                    <p>{{stock.company}}</p>
                </div>

                <div class="col mobile">
                    <p>{{stock.symbol}}</p>
                </div>

                <div class="col mobile">
                    <p>{{stock.price}}</p>
                </div>
                <div class="col mobile">
                    
                    <button id = 'buy-button' data={{stock.price}} class = 'buy-button'>
                        <img class = 'button-image' src = '/images/buy-button.png'>
                    </button>
                    <div id = 'id-{{stock.id}}' class = 'hide'>{{stock.id}}</div>
                </div>
            </div>
        </div>
    {{/each}}
</div>