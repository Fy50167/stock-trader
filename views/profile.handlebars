<section class = 'section-wrapper'>
    {{>sidebar-nav}}

    <section class = 'body-section'>
        <div class = 'stocks-list'>
            <div class="container stock" style="background-color: #FFD580; color: white;"> 
                <div class="row">
                    <div class="col text-uppercase mobile">
                        <p>Company</p>
                    </div>

                    <div class="col text-uppercase mobile">
                        <p>Symbol</p>
                    </div>

                    <div class="col text-uppercase mobile">
                        <p>Quantity</p>
                    </div>

                     <div class="col text-uppercase mobile">
                        <p>Price</p>
                    </div>

                </div>
            </div>
            {{#each stocks as |stock|}}
                <div class = "container stock">
                    <div class="row">
                        <div class="col mobile">
                            <p>{{stock.company}}</p>
                        </div>

                        <div class="col mobile">
                            <p>{{stock.symbol}}</p>
                        </div>

                        <div class="col mobile">
                            <p>{{stock.quantity}}</p>
                        </div>

                        <div class="col mobile">
                            <p>${{stock.price}}</p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</section>

<script src="./js/profile.js"></script>